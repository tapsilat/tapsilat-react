{
  "name": "tapsilat-react",
  "version": "0.1.0",
  "description": "React provider and hooks for the @tapsilat/tapsilat-js SDK.",
  "keywords": [
    "tapsilat",
    "payments",
    "sdk",
    "react",
    "hooks"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapsilat/tapsilat-react.git"
  },
  "author": "Tapsilat",
  "bugs": {
    "url": "https://github.com/tapsilat/tapsilat-react/issues"
  },
  "homepage": "https://github.com/tapsilat/tapsilat-react#readme",
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    }
  },
  "dependencies": {
    "@tapsilat/tapsilat-js": "^2025.11.19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "jsdom": "^27.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
